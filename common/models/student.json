{
  "name": "Student",
  "plural": "Students",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "firstname": {
      "type": "string"
    },
    "lastname": {
      "type": "string"
    },
    "fullname": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "enrollments": {
      "type": "hasMany",
      "model": "StudentGroup",
      "foreignKey": "studentId",
      "through": "Enrollment"
    },
    "advices": {
      "type": "hasMany",
      "model": "StudentAdvice",
      "foreignKey": "studentId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "loginMoodle"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getAttendance"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "updateAttributes"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "updateAttribute"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "update"
    }
  ],
  "methods": {
    "loginMoodle": {
      "accepts": [
        {
          "arg": "userDetails",
          "type": "object"
        }
      ],
      "returns": {
        "arg": "return",
        "type": "object"
      },
      "description": "This method do login by Moodle",
      "http": {
        "verb": "post"
      }
    },
    "getAttendance": {
      "accepts": [
        {
          "arg": "studentId",
          "type": "number"
        }
      ],
      "returns": {
        "arg": "return",
        "type": "number"
      },
      "description": "This method return the Attendance of the student",
      "http": {
        "verb": "get"
      }
    }
  }
}
