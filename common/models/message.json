{
  "name": "Message",
  "plural": "Messages",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "string"
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "default": "$now"
    },
    "sentAt": {
      "type": "date"
    },
    "scheduledFor": {
      "type": "date"
    },
    "isRead": {
      "type": "boolean",
      "default": false
    },
    "isDownloaded": {
      "type": "boolean",
      "default": false
    },
    "isArchived": {
      "type": "boolean",
      "default": false
    },
    "severity": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "Student",
      "foreignKey": "studentId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {}
}
