{
  "name": "Student",
  "plural": "Students",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "firstname": {
      "type": "string"
    },
    "lastname": {
      "type": "string"
    },
    "fullname": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "enrollments": {
      "type": "hasMany",
      "model": "StudentGroup",
      "foreignKey": "studentId",
      "through": "Enrollment"
    },
    "advices": {
      "type": "hasMany",
      "model": "StudentAdvice",
      "foreignKey": "studentId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "loginMoodle"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    }
  ],
  "methods": {
    "loginMoodle": {
      "accepts": [
        {
          "arg": "credencial",
          "type": "object"
        }
      ],
      "returns": {
        "arg": "return",
        "type": "string"
      },
      "description": "This method do login by Moodle",
      "http": {
        "verb": "post"
      }
    }
  }
}
